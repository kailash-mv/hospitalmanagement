generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CAREWORKER
  MANAGER
}

model User {
  id             String             @id @default(uuid())
  name           String
  email          String             @unique
  hashedPassword String?
  role           Role?
  shifts         Shift[]            @relation("UserShifts")
  perimeter      LocationPerimeter?
}

model Shift {
  id           String  @id @default(uuid())
  careWorker   User    @relation("UserShifts", fields: [careWorkerId], references: [id])
  careWorkerId String
  clockInTime  DateTime
  clockOutTime DateTime?
  note         String?
  locationIn   String
  locationOut  String?
}

model LocationPerimeter {
  id        String  @id @default(uuid())
  manager   User    @relation(fields: [managerId], references: [id])
  managerId String  @unique
  lat       Float
  lng       Float
  radius    Float
}

